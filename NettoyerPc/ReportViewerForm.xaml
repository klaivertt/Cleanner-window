<Window x:Class="NettoyerPc.ReportViewerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rapports de nettoyage"
        Height="760" Width="1100"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2E">

    <Window.Resources>
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="18,14"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
        </Style>
        <Style x:Key="Btn" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="14,7"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.80"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.65"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- EN-TETE -->
        <Border Grid.Row="0" Background="#12121F" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Rapports de nettoyage" FontSize="22" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="TxtSubtitle" Text="Historique de vos sessions de nettoyage"
                               FontSize="12" Foreground="#888" Margin="0,3,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BtnOpenFolder" Content="Ouvrir le dossier" Click="BtnOpenFolder_Click"
                            Style="{StaticResource Btn}" Background="#2A2A3E" Margin="0,0,8,0"/>
                    <Button Content="Fermer" Click="BtnClose_Click"
                            Style="{StaticResource Btn}" Background="#8B1A1A"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTENU PRINCIPAL -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" MinWidth="180"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR : liste rapports -->
            <Border Grid.Column="0" Background="#12121F" BorderBrush="#2A2A3E" BorderThickness="0,0,1,0">
                <DockPanel>
                    <Border DockPanel.Dock="Top" Padding="16,12,16,8">
                        <TextBlock Text="Historique" FontSize="13" FontWeight="SemiBold" Foreground="#AAAACC"/>
                    </Border>
                    <Border DockPanel.Dock="Bottom" Padding="12,10" Background="#0D0D1A">
                        <Button x:Name="BtnDeleteReport" Content="Supprimer ce rapport" Click="BtnDeleteReport_Click"
                                Style="{StaticResource Btn}" Background="#4A1010"/>
                    </Border>
                    <ListBox x:Name="ReportList" Background="Transparent" BorderThickness="0"
                             SelectionChanged="ReportList_SelectionChanged"
                             Foreground="White" Margin="0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="14,9"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#CCCCDD"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1E1E3A"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#1A3A6B"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock x:Name="ItemLabel" Text="{Binding DisplayLabel}" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding SubLabel}" FontSize="10" Foreground="#888" Margin="0,2,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- ZONE PRINCIPALE -->
            <Border Grid.Column="1" Background="#1E1E2E">
                <Grid>
                    <!-- Placeholder quand rien n'est sélectionné -->
                    <StackPanel x:Name="PlaceholderPanel" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Sélectionnez un rapport" FontSize="20"
                                   Foreground="#555" HorizontalAlignment="Center"/>
                        <TextBlock Text="Choisissez un rapport dans la liste pour voir les statistiques"
                                   FontSize="13" Foreground="#444" Margin="0,8,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Contenu JSON : stats + étapes -->
                    <ScrollViewer x:Name="JsonPanel" Visibility="Collapsed"
                                  VerticalScrollBarVisibility="Auto" Padding="24,20,24,20">
                        <StackPanel>

                            <!-- EN-TETE RAPPORT -->
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock x:Name="ReportTitle" Text="Rapport" FontSize="18" FontWeight="Bold" Foreground="White"/>
                                <TextBlock x:Name="ReportMeta" Foreground="#888" FontSize="12" Margin="0,4,0,0"/>
                            </StackPanel>

                            <!-- STAT CARDS -->
                            <Grid Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Style="{StaticResource StatCard}" Background="#0D2A1A">
                                    <StackPanel>
                                        <TextBlock Text="ESPACE LIBERE" FontSize="10" Foreground="#4EC98C" FontWeight="Bold" Margin="0,0,0,6"/>
                                        <TextBlock x:Name="StatSpace" Text="—" FontSize="26" FontWeight="Bold" Foreground="#5AE896"/>
                                        <TextBlock Text="sur tous les disques" FontSize="10" Foreground="#4EC98C" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="1" Style="{StaticResource StatCard}" Background="#0D1F3C" Margin="0,0,12,0">
                                    <StackPanel>
                                        <TextBlock Text="FICHIERS SUPPRIMES" FontSize="10" Foreground="#4AACFF" FontWeight="Bold" Margin="0,0,0,6"/>
                                        <TextBlock x:Name="StatFiles" Text="—" FontSize="26" FontWeight="Bold" Foreground="#6BBBFF"/>
                                        <TextBlock Text="fichiers temporaires" FontSize="10" Foreground="#4AACFF" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="2" Style="{StaticResource StatCard}" Background="#2A1A00" Margin="0,0,12,0">
                                    <StackPanel>
                                        <TextBlock Text="DUREE TOTALE" FontSize="10" Foreground="#FFB830" FontWeight="Bold" Margin="0,0,0,6"/>
                                        <TextBlock x:Name="StatDuration" Text="—" FontSize="26" FontWeight="Bold" Foreground="#FFD060"/>
                                        <TextBlock Text="minutes" FontSize="10" Foreground="#FFB830" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="3" Style="{StaticResource StatCard}" Background="#1A1A3A" Margin="0,0,12,0">
                                    <StackPanel>
                                        <TextBlock Text="ETAPES" FontSize="10" Foreground="#AA88FF" FontWeight="Bold" Margin="0,0,0,6"/>
                                        <TextBlock x:Name="StatSteps" Text="—" FontSize="26" FontWeight="Bold" Foreground="#CC99FF"/>
                                        <TextBlock x:Name="StatStepsSub" Text="operations" FontSize="10" Foreground="#AA88FF" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- TITRE SECTION ETAPES -->
                            <TextBlock Text="Détail des opérations" FontSize="14" FontWeight="Bold"
                                       Foreground="#AAAACC" Margin="0,0,0,12"/>

                            <!-- LISTE ETAPES -->
                            <ItemsControl x:Name="StepsList"/>

                        </StackPanel>
                    </ScrollViewer>

                    <!-- Contenu TXT (legacy) -->
                    <Border x:Name="TxtPanel" Visibility="Collapsed" Padding="24,20">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top" Text="Rapport texte (ancien format)"
                                       Foreground="#666" FontSize="12" Margin="0,0,0,12"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                <TextBox x:Name="ReportContent" FontFamily="Consolas" FontSize="12"
                                         IsReadOnly="True" BorderThickness="0" TextWrapping="NoWrap"
                                         Background="Transparent" Foreground="#AAAACC"/>
                            </ScrollViewer>
                        </DockPanel>
                    </Border>

                </Grid>
            </Border>

        </Grid>

        <!-- PIED DE PAGE -->
        <Border Grid.Row="2" Background="#12121F" BorderBrush="#2A2A3E" BorderThickness="0,1,0,0" Padding="24,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="TxtFooterStats" Grid.Column="0"
                           Foreground="#555" FontSize="11" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="Nettoyeur PC 2000  v2.0"
                           Foreground="#444" FontSize="11" VerticalAlignment="Center"/>
            </Grid>
        </Border>

    </Grid>
</Window>
