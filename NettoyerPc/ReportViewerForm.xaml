<Window x:Class="NettoyerPc.ReportViewerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="RvWindow" Title="Rapports de nettoyage"
        Height="760" Width="1100"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="#1E1E2E">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" ResizeBorderThickness="6"
                      UseAeroCaptionButtons="False" GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- Animations -->
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="18,14"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4">
                                <DoubleAnimation.EasingFunction>
                                    <QuadraticEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="Btn" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="14,7"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.80"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.65"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Zone de notification -->
        <Border x:Name="NotificationBar" Grid.Row="0" Background="#2A5A2A" Padding="12,8" 
                Visibility="Collapsed" Panel.ZIndex="999">
            <Grid>
                <TextBlock x:Name="NotificationText" Text="" FontSize="12" Foreground="White" 
                          VerticalAlignment="Center"/>
                <Button Content="✕" Click="CloseNotification_Click" 
                        Background="Transparent" BorderThickness="0" Foreground="White"
                        HorizontalAlignment="Right" Cursor="Hand" Padding="8,0"/>
            </Grid>
        </Border>

        <!-- EN-TETE -->
        <Border Grid.Row="0" Background="#12121F">
            <StackPanel>
                <!-- Barre titre -->
                <Grid Height="32">
                    <TextBlock Text="PC Clean" FontSize="10" Foreground="#44446A"
                               VerticalAlignment="Center" Margin="24,0,0,0"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Stretch">
                        <Button Content="&#x2013;" Style="{StaticResource ChromeBtn}" Click="Minimize_Click"/>
                        <Button x:Name="BtnMaximize" Content="&#x2610;" Style="{StaticResource ChromeBtn}" Click="Maximize_Click"/>
                        <Button Content="&#x2715;" Style="{StaticResource ChromeCloseBtn}" Click="CloseWin_Click"/>
                    </StackPanel>
                </Grid>
                <!-- Contenu en-tête -->
                <Grid Margin="24,0,24,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock x:Name="TxtRvHeader" Text="Rapports de nettoyage" FontSize="22" FontWeight="Bold" Foreground="White"/>
                        <TextBlock x:Name="TxtSubtitle" Text="Historique de vos sessions de nettoyage"
                                   FontSize="12" Foreground="#888" Margin="0,3,0,0"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="BtnExportReport" Content="📄 Exporter" Click="BtnExportReport_Click"
                                Style="{StaticResource Btn}" Background="#2A3E2A" Margin="0,0,8,0" 
                                IsEnabled="False" ToolTip="Copier le chemin du rapport (Ctrl+E)"/>
                        <Button x:Name="BtnRefresh" Content="🔄 Actualiser" Click="BtnRefresh_Click"
                                Style="{StaticResource Btn}" Background="#1A3A5A" Margin="0,0,8,0"
                                ToolTip="Recharger la liste des rapports (F5)"/>
                        <Button x:Name="BtnOpenFolder" Content="📁 Dossier" Click="BtnOpenFolder_Click"
                                Style="{StaticResource Btn}" Background="#2A2A3E" Margin="0,0,8,0"
                                ToolTip="Ouvrir le dossier Reports (Ctrl+O)"/>
                        <Button x:Name="BtnCloseRv" Content="✕ Fermer" Click="BtnClose_Click"
                                Style="{StaticResource Btn}" Background="#8B1A1A"
                                ToolTip="Fermer la fenêtre (Echap)"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- CONTENU PRINCIPAL -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" MinWidth="180"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR : liste rapports -->
            <Border Grid.Column="0" Background="#12121F" BorderBrush="#2A2A3E" BorderThickness="0,0,1,0">
                <DockPanel>
                    <!-- Statistiques globales en haut -->
                    <Border DockPanel.Dock="Top" Background="#1A1A2E" Padding="12" Margin="8,8,8,0" CornerRadius="6">
                        <StackPanel>
                            <TextBlock Text="STATISTIQUES GLOBALES" FontSize="9" FontWeight="Bold" 
                                      Foreground="#888" Margin="0,0,0,8"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="TxtGlobalReports" Text="—" FontSize="16" FontWeight="Bold" 
                                              Foreground="#6BBBFF"/>
                                    <TextBlock Text="rapports" FontSize="9" Foreground="#666"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock x:Name="TxtGlobalSpace" Text="—" FontSize="16" FontWeight="Bold" 
                                              Foreground="#5AE896"/>
                                    <TextBlock Text="libérés" FontSize="9" Foreground="#666"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Barre de recherche -->
                    <Border DockPanel.Dock="Top" Padding="8,8,8,4">
                        <Border Background="#1A1A2E" CornerRadius="4" Padding="8,6">
                            <Grid>
                                <TextBox x:Name="SearchBox" 
                                        Background="Transparent" 
                                        Foreground="White" 
                                        BorderThickness="0"
                                        FontSize="11"
                                        TextChanged="SearchBox_TextChanged"
                                        ToolTip="Rechercher un rapport par date ou nom (Ctrl+F)"/>
                                <TextBlock x:Name="SearchPlaceholder" 
                                          Text="🔍 Rechercher..." 
                                          FontSize="11"
                                          Foreground="#555"
                                          IsHitTestVisible="False"
                                          Margin="2,0,0,0"/>
                            </Grid>
                        </Border>
                    </Border>
                    
                    <!-- Options de tri -->
                    <Border DockPanel.Dock="Top" Padding="8,4,8,8">
                        <Border Background="#1A1A2E" CornerRadius="4" Padding="8,6">
                            <StackPanel>
                                <TextBlock Text="TRIER PAR" FontSize="8" Foreground="#666" FontWeight="Bold" Margin="0,0,0,4"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="BtnSortDate" Content="📅 Date" Click="BtnSortDate_Click"
                                            Background="#2A2A3E" Foreground="White" BorderThickness="0"
                                            Padding="6,3" FontSize="9" Margin="0,0,4,0" Cursor="Hand"
                                            ToolTip="Trier par date (plus récents d'abord)"/>
                                    <Button x:Name="BtnSortSpace" Content="💾 Espace" Click="BtnSortSpace_Click"
                                            Background="#1A1A2E" Foreground="#888" BorderThickness="0"
                                            Padding="6,3" FontSize="9" Margin="0,0,4,0" Cursor="Hand"
                                            ToolTip="Trier par espace libéré"/>
                                    <Button x:Name="BtnSortDuration" Content="⏱️ Durée" Click="BtnSortDuration_Click"
                                            Background="#1A1A2E" Foreground="#888" BorderThickness="0"
                                            Padding="6,3" FontSize="9" Cursor="Hand"
                                            ToolTip="Trier par durée d'exécution"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Border>
                    
                    <Border DockPanel.Dock="Top" Padding="16,12,16,8">
                        <TextBlock x:Name="TxtSidebarHistory" Text="Historique" FontSize="13" FontWeight="SemiBold" Foreground="#AAAACC"/>
                    </Border>
                    <Border DockPanel.Dock="Bottom" Padding="12,10" Background="#0D0D1A">
                        <Button x:Name="BtnDeleteReport" Content="Supprimer ce rapport" Click="BtnDeleteReport_Click"
                                Style="{StaticResource Btn}" Background="#4A1010"/>
                    </Border>
                    <ListBox x:Name="ReportList" Background="Transparent" BorderThickness="0"
                             SelectionChanged="ReportList_SelectionChanged"
                             Foreground="White" Margin="0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="14,9"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#CCCCDD"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1E1E3A"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#1A3A6B"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock x:Name="ItemLabel" Text="{Binding DisplayLabel}" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding SubLabel}" FontSize="10" Foreground="#888" Margin="0,2,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- ZONE PRINCIPALE -->
            <Border Grid.Column="1" Background="#1E1E2E">
                <Grid>
                    <!-- Placeholder quand rien n'est sélectionné -->
                    <StackPanel x:Name="PlaceholderPanel" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock x:Name="TxtPlaceholder1" Text="Sélectionnez un rapport" FontSize="20"
                                   Foreground="#555" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TxtPlaceholder2" Text="Choisissez un rapport dans la liste pour voir les statistiques"
                                   FontSize="13" Foreground="#444" Margin="0,8,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Contenu JSON : stats + étapes -->
                    <ScrollViewer x:Name="JsonPanel" Visibility="Collapsed"
                                  VerticalScrollBarVisibility="Auto" Padding="24,20,24,20">
                        <StackPanel>

                            <!-- EN-TETE RAPPORT -->
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock x:Name="ReportTitle" Text="Rapport" FontSize="18" FontWeight="Bold" Foreground="White"/>
                                <TextBlock x:Name="ReportMeta" Foreground="#888" FontSize="12" Margin="0,4,0,0"/>
                            </StackPanel>

                            <!-- STAT CARDS -->
                            <Grid Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Style="{StaticResource StatCard}" Background="#0D2A1A">
                                    <StackPanel>
                                        <TextBlock x:Name="TxtStatSpaceLabel" Text="ESPACE LIBERE" FontSize="10" Foreground="#4EC98C" FontWeight="Bold" Margin="0,0,0,6"/>
                                        <TextBlock x:Name="StatSpace" Text="—" FontSize="26" FontWeight="Bold" Foreground="#5AE896"/>
                                        <TextBlock x:Name="TxtStatSpaceSub" Text="sur tous les disques" FontSize="10" Foreground="#4EC98C" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="1" Style="{StaticResource StatCard}" Background="#0D1F3C" Margin="0,0,12,0">
                                    <StackPanel>
                                        <TextBlock x:Name="TxtStatFilesLabel" Text="FICHIERS SUPPRIMES" FontSize="10" Foreground="#4AACFF" FontWeight="Bold" Margin="0,0,0,6"/>
                                        <TextBlock x:Name="StatFiles" Text="—" FontSize="26" FontWeight="Bold" Foreground="#6BBBFF"/>
                                        <TextBlock x:Name="TxtStatFilesSub" Text="fichiers temporaires" FontSize="10" Foreground="#4AACFF" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="2" Style="{StaticResource StatCard}" Background="#2A1A00" Margin="0,0,12,0">
                                    <StackPanel>
                                        <TextBlock x:Name="TxtStatDurLabel" Text="DUREE TOTALE" FontSize="10" Foreground="#FFB830" FontWeight="Bold" Margin="0,0,0,6"/>
                                        <TextBlock x:Name="StatDuration" Text="—" FontSize="26" FontWeight="Bold" Foreground="#FFD060"/>
                                        <TextBlock x:Name="TxtStatDurSub" Text="minutes" FontSize="10" Foreground="#FFB830" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="3" Style="{StaticResource StatCard}" Background="#1A1A3A" Margin="0,0,12,0">
                                    <StackPanel>
                                        <TextBlock x:Name="TxtStatStepsLabel" Text="ETAPES" FontSize="10" Foreground="#AA88FF" FontWeight="Bold" Margin="0,0,0,6"/>
                                        <TextBlock x:Name="StatSteps" Text="—" FontSize="26" FontWeight="Bold" Foreground="#CC99FF"/>
                                        <TextBlock x:Name="StatStepsSub" Text="operations" FontSize="10" Foreground="#AA88FF" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- SCORE DE PERFORMANCE (v4.0) -->
                            <Border x:Name="PerformanceScorePanel" Visibility="Collapsed" 
                                    Background="#1E2E3E" CornerRadius="10" Padding="20,16" Margin="0,0,0,20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Score et Grade -->
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Border x:Name="ScoreBadge" Background="#1E3E2E" CornerRadius="50" Width="70" Height="70" Margin="0,0,16,0">
                                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <TextBlock x:Name="TxtScoreValue" Text="—" FontSize="24" FontWeight="Bold" 
                                                          Foreground="#5AE896" HorizontalAlignment="Center"/>
                                                <TextBlock x:Name="TxtScoreGrade" Text="—" FontSize="14" FontWeight="SemiBold" 
                                                          Foreground="#4EC98C" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="SCORE DE PERFORMANCE" FontSize="11" Foreground="#888" FontWeight="Bold"/>
                                            <TextBlock x:Name="TxtScoreMessage" Text="—" FontSize="13" Foreground="White" 
                                                      Margin="0,4,0,0" TextWrapping="Wrap" MaxWidth="300"/>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <!-- Benchmark disque -->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                        <TextBlock Text="BENCHMARK DISQUE" FontSize="10" Foreground="#888" FontWeight="Bold" 
                                                  HorizontalAlignment="Right"/>
                                        <TextBlock x:Name="TxtBenchmarkDelta" Text="—" FontSize="12" Foreground="#FFB830" 
                                                  Margin="0,4,0,0" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- REPARTITION PAR CATEGORIE (v4.0) -->
                            <Border x:Name="CategoryPanel" Visibility="Collapsed" 
                                    Background="#1A1A2E" CornerRadius="10" Padding="16,12" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="RÉPARTITION PAR CATÉGORIE" FontSize="10" 
                                              Foreground="#888" FontWeight="Bold" Margin="0,0,0,12"/>
                                    <ItemsControl x:Name="CategoryList"/>
                                </StackPanel>
                            </Border>

                            <!-- TITRE SECTION ETAPES -->
                            <TextBlock x:Name="TxtDetailTitle" Text="Détail des opérations" FontSize="14" FontWeight="Bold"
                                       Foreground="#AAAACC" Margin="0,0,0,12"/>

                            <!-- LISTE ETAPES -->
                            <ItemsControl x:Name="StepsList"/>

                        </StackPanel>
                    </ScrollViewer>

                    <!-- Contenu TXT (legacy) -->
                    <Border x:Name="TxtPanel" Visibility="Collapsed" Padding="24,20">
                        <DockPanel>
                            <TextBlock x:Name="TxtLegacyTitle" DockPanel.Dock="Top" Text="Rapport texte (ancien format)"
                                       Foreground="#666" FontSize="12" Margin="0,0,0,12"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                <TextBox x:Name="ReportContent" FontFamily="Consolas" FontSize="12"
                                         IsReadOnly="True" BorderThickness="0" TextWrapping="NoWrap"
                                         Background="Transparent" Foreground="#AAAACC"/>
                            </ScrollViewer>
                        </DockPanel>
                    </Border>

                </Grid>
            </Border>

        </Grid>

        <!-- PIED DE PAGE -->
        <Border Grid.Row="2" Background="#12121F" BorderBrush="#2A2A3E" BorderThickness="0,1,0,0" Padding="24,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="TxtFooterStats" Grid.Column="0"
                           Foreground="#555" FontSize="11" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="PC Clean  v2.0"
                           Foreground="#444" FontSize="11" VerticalAlignment="Center"/>
            </Grid>
        </Border>

    </Grid>
</Window>
