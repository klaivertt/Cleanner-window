<Window x:Class="NettoyerPc.ReportViewerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ“Š Rapports de nettoyage"
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte -->
        <Border Grid.Row="0" Background="#0078D7" Padding="20,15">
            <TextBlock Text="ðŸ“Š RAPPORTS DE NETTOYAGE"
                       FontSize="22" FontWeight="Bold" Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Contenu : liste + affichage -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Liste des rapports -->
            <Border Grid.Column="0" Background="White" BorderBrush="#CCCCCC"
                    BorderThickness="1" CornerRadius="6" Margin="0,0,10,0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Rapports disponibles"
                               FontWeight="SemiBold" FontSize="14"
                               Margin="12,12,12,8"/>
                    <ListBox x:Name="ReportList"
                             BorderThickness="0"
                             SelectionChanged="ReportList_SelectionChanged"
                             FontFamily="Consolas" FontSize="12"
                             Margin="4"/>
                </DockPanel>
            </Border>

            <!-- Contenu du rapport -->
            <Border Grid.Column="1" Background="White" BorderBrush="#CCCCCC"
                    BorderThickness="1" CornerRadius="6">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal"
                                Margin="12,12,12,8">
                        <TextBlock x:Name="ReportTitle" Text="SÃ©lectionnez un rapport"
                                   FontWeight="SemiBold" FontSize="14"
                                   VerticalAlignment="Center"/>
                        <Button x:Name="BtnOpenFolder" Content="ðŸ“ Ouvrir dossier"
                                Click="BtnOpenFolder_Click"
                                Margin="15,0,0,0" Padding="10,4"
                                Background="#F0F0F0" Foreground="#333"/>
                        <Button x:Name="BtnDeleteReport" Content="ðŸ—‘ Supprimer"
                                Click="BtnDeleteReport_Click"
                                Margin="8,0,0,0" Padding="10,4"
                                Background="#FFF0F0" Foreground="#D13438"/>
                    </StackPanel>
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <TextBox x:Name="ReportContent"
                                 FontFamily="Consolas" FontSize="12"
                                 IsReadOnly="True" BorderThickness="0"
                                 TextWrapping="NoWrap"
                                 VerticalScrollBarVisibility="Auto"
                                 Background="White"
                                 Margin="12,0,12,12"/>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Pied de page -->
        <Border Grid.Row="2" Background="White" BorderBrush="#CCCCCC"
                BorderThickness="0,1,0,0" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Fermer" Click="BtnClose_Click"
                        Padding="20,8" Background="#0078D7" Foreground="White"
                        FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
