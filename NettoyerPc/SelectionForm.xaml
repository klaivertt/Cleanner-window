<Window x:Class="NettoyerPc.SelectionForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Selection personnalisee"
        Height="820" Width="1020"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E2E">

    <Window.Resources>
        <Style x:Key="BtnPrimary" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="16,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- EN-TETE -->
        <Border Grid.Row="0" Background="#12121F" Padding="24,16">
            <StackPanel>
                <TextBlock Text="Choisissez ce que vous voulez nettoyer"
                           FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock FontSize="12" Foreground="#888" Margin="0,4,0,0">
                    <Run Text="Cochez ou decochez chaque operation. Chaque element est explique.  "/>
                    <Run FontWeight="SemiBold" Foreground="#4EC98C"
                         Text="Toutes les options selectionnees par defaut sont 100% sures."/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- CONTENU -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#1E1E2E">
            <StackPanel x:Name="ContentPanel" Margin="20,12,20,12"/>
        </ScrollViewer>

        <!-- PIED DE PAGE -->
        <Border Grid.Row="2" Background="#12121F" BorderBrush="#2A2A3E"
                BorderThickness="0,1,0,0" Padding="20,14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Tout selectionner" Click="BtnSelectAll_Click"
                            Style="{StaticResource BtnPrimary}" Background="#2A2A50"
                            Height="36" Margin="0,0,8,0"/>
                    <Button Content="Tout deselectionner" Click="BtnDeselectAll_Click"
                            Style="{StaticResource BtnPrimary}" Background="#2A2A50"
                            Height="36" Margin="0,0,16,0"/>
                    <TextBlock x:Name="SelectionCount" Text="0 operation(s)"
                               Foreground="#888" FontSize="13" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Annuler" Click="BtnCancel_Click"
                            Style="{StaticResource BtnPrimary}" Background="#3A3A3A"
                            Height="40" Margin="0,0,10,0" Width="110"/>
                    <Button x:Name="BtnStart" Content="LANCER LE NETTOYAGE" Click="BtnStart_Click"
                            Style="{StaticResource BtnPrimary}" Background="#1A5ECC"
                            Height="40" Width="220" FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
