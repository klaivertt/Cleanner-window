<Window x:Class="NettoyerPc.MainForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nettoyeur PC 2000"
        Height="820" Width="960"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="#1E1E2E">

    <Window.Resources>
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        <Style x:Key="BtnPrimary" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                CornerRadius="6" Padding="16,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="RiskBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,2"/>
        </Style>
        <Style x:Key="CardBody" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="20"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- EN-TETE -->
        <Border Grid.Row="0" Background="#12121F" Padding="24,18">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Nettoyeur PC 2000" FontSize="26" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Optimisation propre · Espace disque · Gaming · Windows" FontSize="12" Foreground="#888" Margin="0,3,0,0"/>
                </StackPanel>
                <Button Grid.Column="1" x:Name="BtnReports" Content="Mes rapports" Click="BtnReports_Click"
                        Style="{StaticResource BtnPrimary}" Background="#2A2A3E" Height="36" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- BANNIERE SECURITE -->
        <Border Grid.Row="1" Background="#0D3320" Padding="20,10">
            <TextBlock VerticalAlignment="Center" Foreground="#AADDBB" FontSize="12">
                <Run FontWeight="Bold" Foreground="#4EC98C" Text="GARANTIE SECURITE   "/>
                <Run Text="Ce programme ne supprime JAMAIS vos fichiers de jeux, sauvegardes, documents ni applications. Il efface uniquement les fichiers temporaires et caches qui se recreent automatiquement."/>
            </TextBlock>
        </Border>

        <!-- CONTENU PRINCIPAL -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Background="#1E1E2E">
            <StackPanel Margin="24,16,24,16">

                <!-- BOUTON VEDETTE : SELECTION PERSONNALISEE -->
                <Border Background="#0D1F3C" BorderBrush="#2255AA" BorderThickness="2"
                        CornerRadius="12" Padding="24,18" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <TextBlock Text="CHOISIR CE QUE JE VEUX NETTOYER"
                                           FontSize="17" FontWeight="Bold" Foreground="White"/>
                                <Border Style="{StaticResource RiskBadge}" Background="#1A6B3A"
                                        Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="RECOMMANDE" FontSize="10" FontWeight="Bold" Foreground="#5AE896"/>
                                </Border>
                            </StackPanel>
                            <TextBlock Style="{StaticResource CardBody}"
                                       Text="Cochez exactement ce que vous voulez supprimer. Chaque option est expliquee avec ce qu elle touche et ce qu elle ne touche pas. Controle total garanti."/>
                        </StackPanel>
                        <Button Grid.Column="1" x:Name="BtnCustom" Content="OUVRIR LA SELECTION" Click="BtnCustom_Click"
                                Style="{StaticResource BtnPrimary}" Background="#1A5ECC"
                                Height="46" FontSize="14" Margin="20,0,0,0" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- 2 COLONNES -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- GAUCHE -->
                    <StackPanel Grid.Column="0">

                        <!-- Nettoyage Rapide -->
                        <Border Style="{StaticResource Card}" Background="#1A1A2E" BorderBrush="#2A2A5A" BorderThickness="1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Nettoyage Rapide" FontSize="15" FontWeight="Bold" Foreground="White"/>
                                    <Border Style="{StaticResource RiskBadge}" Background="#1A6B3A" Margin="10,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="100% sur" FontSize="10" Foreground="#5AE896" FontWeight="Bold"/>
                                    </Border>
                                    <Border Style="{StaticResource RiskBadge}" Background="#2A2A3E" Margin="6,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="5-15 min" FontSize="10" Foreground="#888"/>
                                    </Border>
                                </StackPanel>
                                <TextBlock Style="{StaticResource CardBody}" Margin="0,0,0,8">
                                    <Run FontWeight="SemiBold" Foreground="#6BBBFF" Text="Ce qui est nettoye :"/>
                                    <LineBreak/><Run Text="  Fichiers temporaires Windows (%TEMP%, C:\Windows\Temp)"/>
                                    <LineBreak/><Run Text="  Cache navigateurs (Chrome, Firefox, Edge, Brave)"/>
                                    <LineBreak/><Run Text="  Miniatures Windows (thumbnails)"/>
                                    <LineBreak/><Run Text="  Prefetch (se recree au prochain demarrage)"/>
                                    <LineBreak/><Run Text="  Corbeilles sur tous les disques"/>
                                    <LineBreak/><Run Text="  Journaux Windows (logs systeme)"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource CardBody}" Foreground="#4EC98C" Margin="0,0,0,10">
                                    <Run FontWeight="SemiBold" Text="Ne touche JAMAIS : "/>
                                    <Run Text="saves, fichiers jeux, apps installees, documents"/>
                                </TextBlock>
                                <Button x:Name="BtnComplete" Content="DEMARRER LE NETTOYAGE RAPIDE" Click="BtnComplete_Click"
                                        Style="{StaticResource BtnPrimary}" Background="#1A6B3A"/>
                            </StackPanel>
                        </Border>

                        <!-- Gaming + Disque -->
                        <Border Style="{StaticResource Card}" Background="#1A1A2E" BorderBrush="#3A2A5A" BorderThickness="1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Gaming + Optimisation Disque" FontSize="15" FontWeight="Bold" Foreground="White"/>
                                    <Border Style="{StaticResource RiskBadge}" Background="#1A6B3A" Margin="10,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="Sur pour les jeux" FontSize="10" Foreground="#5AE896" FontWeight="Bold"/>
                                    </Border>
                                </StackPanel>
                                <Border Style="{StaticResource RiskBadge}" Background="#2A2A3E" HorizontalAlignment="Left" Margin="0,0,0,10">
                                    <TextBlock Text="20-60 min selon disque" FontSize="10" Foreground="#888"/>
                                </Border>
                                <TextBlock Style="{StaticResource CardBody}" Margin="0,0,0,8">
                                    <Run FontWeight="SemiBold" Foreground="#6BBBFF" Text="Ce qui est nettoye :"/>
                                    <LineBreak/><Run Text="  Shader cache Steam (se recree, ralentit juste 1ere run)"/>
                                    <LineBreak/><Run Text="  Logs et dumps Steam, Epic Games, Battle.net"/>
                                    <LineBreak/><Run Text="  Cache DirectX / GPU shader (D3DSCache)"/>
                                    <LineBreak/><Run Text="  Cache Discord, Spotify, OBS (logs uniquement)"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource CardBody}" Margin="0,0,0,8">
                                    <Run FontWeight="SemiBold" Foreground="#FFB830" Text="Optimisation disque :"/>
                                    <LineBreak/><Run Text="  HDD : defragmentation intelligente des secteurs"/>
                                    <LineBreak/><Run Text="  SSD : TRIM (libere les blocs inutilises)"/>
                                    <LineBreak/><Run Text="  Verification erreurs disque (chkdsk /scan)"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource CardBody}" Foreground="#4EC98C" Margin="0,0,0,10">
                                    <Run FontWeight="SemiBold" Text="Ne touche JAMAIS : "/>
                                    <Run Text="fichiers jeux, saves, mods, configurations"/>
                                </TextBlock>
                                <Button x:Name="BtnGamingDisk" Content="OPTIMISER GAMING + DISQUE" Click="BtnGamingDisk_Click"
                                        Style="{StaticResource BtnPrimary}" Background="#5C2D91"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>

                    <!-- SEPARATEUR -->
                    <Rectangle Grid.Column="1" Fill="#2A2A3E" Width="1"/>

                    <!-- DROITE -->
                    <StackPanel Grid.Column="2">

                        <!-- Nettoyage de Printemps -->
                        <Border Style="{StaticResource Card}" Background="#1A1A2E" BorderBrush="#3A2A2A" BorderThickness="1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Nettoyage de Printemps" FontSize="15" FontWeight="Bold" Foreground="White"/>
                                    <Border Style="{StaticResource RiskBadge}" Background="#4A2A00" Margin="10,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="Modere" FontSize="10" Foreground="#FFB830" FontWeight="Bold"/>
                                    </Border>
                                    <Border Style="{StaticResource RiskBadge}" Background="#2A2A3E" Margin="6,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="60-120 min" FontSize="10" Foreground="#888"/>
                                    </Border>
                                </StackPanel>
                                <TextBlock Style="{StaticResource CardBody}" Margin="0,0,0,8">
                                    <Run FontWeight="SemiBold" Foreground="#6BBBFF" Text="Tout le Nettoyage Rapide +"/>
                                    <LineBreak/><Run Text="  Caches de developpement (npm, pip, gradle, NuGet)"/>
                                    <LineBreak/><Run Text="  Nettoyage profond navigateurs"/>
                                    <LineBreak/><Run Text="  Windows Update cache (anciens fichiers d install)"/>
                                    <LineBreak/><Run Text="  Defragmentation + nettoyage composants Windows"/>
                                    <LineBreak/><Run Text="  Point de restauration cree automatiquement avant"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource CardBody}" Foreground="#AA7733" Margin="0,0,0,10">
                                    <Run FontWeight="SemiBold" Foreground="#FFB830" Text="Info : "/>
                                    <Run Text="Les caches dev (npm, pip...) se re-telechargeront au prochain build. Normal."/>
                                </TextBlock>
                                <Button x:Name="BtnDeepClean" Content="NETTOYAGE DE PRINTEMPS" Click="BtnDeepClean_Click"
                                        Style="{StaticResource BtnPrimary}" Background="#8B1A1A"/>
                            </StackPanel>
                        </Border>

                        <!-- Reparation Systeme -->
                        <Border Style="{StaticResource Card}" Background="#1A1A2E" BorderBrush="#1A3A4A" BorderThickness="1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Reparation et Optimisation Systeme" FontSize="15" FontWeight="Bold" Foreground="White"/>
                                    <Border Style="{StaticResource RiskBadge}" Background="#1A3A5A" Margin="10,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="Systeme" FontSize="10" Foreground="#4AACFF" FontWeight="Bold"/>
                                    </Border>
                                </StackPanel>
                                <TextBlock Style="{StaticResource CardBody}" Margin="0,0,0,8">
                                    <Run FontWeight="SemiBold" Foreground="#6BBBFF" Text="7 etapes de reparation Windows :"/>
                                    <LineBreak/><Run Text="  SFC /scannow — verifie l integrite des fichiers systeme"/>
                                    <LineBreak/><Run Text="  DISM /RestoreHealth — repare l image Windows"/>
                                    <LineBreak/><Run Text="  DISM StartComponentCleanup — libere espace WinSxS"/>
                                    <LineBreak/><Run Text="  Reset reseau (Winsock, IP) + DNS Cloudflare 1.1.1.1"/>
                                    <LineBreak/><Run Text="  Rebuild cache polices de caracteres"/>
                                    <LineBreak/><Run Text="  TRIM et defragmentation de tous les disques"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource CardBody}" Foreground="#4466AA" Margin="0,0,0,10">
                                    <Run FontWeight="SemiBold" Foreground="#4AACFF" Text="Duree : "/>
                                    <Run Text="SFC et DISM peuvent durer 30-90 min. Le PC reste utilisable."/>
                                </TextBlock>
                                <Button x:Name="BtnSysOpt" Content="REPARER ET OPTIMISER WINDOWS" Click="BtnSysOpt_Click"
                                        Style="{StaticResource BtnPrimary}" Background="#004E7C"/>
                            </StackPanel>
                        </Border>

                        <!-- Caches Apps Tierces -->
                        <Border Style="{StaticResource Card}" Background="#1A1A2E" BorderBrush="#2A1A4A" BorderThickness="1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Caches Applications Tierces" FontSize="15" FontWeight="Bold" Foreground="White"/>
                                    <Border Style="{StaticResource RiskBadge}" Background="#1A6B3A" Margin="10,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="100% sur" FontSize="10" Foreground="#5AE896" FontWeight="Bold"/>
                                    </Border>
                                </StackPanel>
                                <TextBlock Style="{StaticResource CardBody}" Margin="0,0,0,8">
                                    <Run Text="Supprime uniquement les caches et logs (pas les apps) :"/>
                                    <LineBreak/><Run Text="  Discord (cache GPU, code cache)"/>
                                    <LineBreak/><Run Text="  Spotify (storage cache)"/>
                                    <LineBreak/><Run Text="  Teams et Slack (cache)"/>
                                    <LineBreak/><Run Text="  OBS Studio (logs uniquement)"/>
                                    <LineBreak/><Run Text="  Steam logs/dumps — Epic logs — Battle.net cache"/>
                                </TextBlock>
                                <Button x:Name="BtnThirdParty" Content="NETTOYER LES CACHES D APPS" Click="BtnThirdParty_Click"
                                        Style="{StaticResource BtnPrimary}" Background="#3B1E6E"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Grid>

                <!-- AVERTISSEMENT BLOATWARE -->
                <Border Background="#2A1A00" BorderBrush="#664400" BorderThickness="1"
                        CornerRadius="10" Padding="20,14" Margin="0,4,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <TextBlock Text="SUPPRESSION BLOATWARES" FontSize="14" FontWeight="Bold" Foreground="#FFB830"/>
                                <Border Style="{StaticResource RiskBadge}" Background="#5A3000" Margin="10,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="DESINSTALLE DES APPLICATIONS" FontSize="10" Foreground="#FFB830" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>
                            <TextBlock Foreground="#DDAA55" FontSize="12" TextWrapping="Wrap">
                                <Run Text="Supprime definitivement : Candy Crush, Facebook, TikTok, Xbox GameBar, Cortana, Netflix, Solitaire, Mixed Reality, Bing + desactive la telemetrie Microsoft."/>
                                <LineBreak/>
                                <Run FontWeight="SemiBold" Foreground="#FF9933" Text="Xbox GameBar (Win+G) sera supprime. Les jeux eux-memes ne sont pas affectes."/>
                            </TextBlock>
                        </StackPanel>
                        <Button Grid.Column="1" x:Name="BtnBloatware" Content="Supprimer les Bloatwares" Click="BtnBloatware_Click"
                                Style="{StaticResource BtnPrimary}" Background="#7A4400"
                                Height="40" Margin="20,0,0,0" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- PIED DE PAGE -->
        <Border Grid.Row="3" Background="#12121F" BorderBrush="#2A2A3E" BorderThickness="0,1,0,0" Padding="24,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="8" Height="8" Fill="#4EC98C" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock x:Name="TxtAdminStatus" Text="Droits administrateur actifs"
                               Foreground="#4EC98C" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Grid.Column="1" Text="Nettoyeur PC 2000  v2.0"
                           Foreground="#444" FontSize="11" VerticalAlignment="Center"/>
            </Grid>
        </Border>

    </Grid>
</Window>
